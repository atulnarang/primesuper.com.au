@model MapManager.Library.TripMarker

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>

    <div class="display-label">Date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.VisitDate)
    </div>

    <div class="display-label">Location</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LocationName) (@Html.DisplayFor(model => model.LocationState)), @Html.DisplayFor(model => model.LocationPostcode)
    </div>

    <div class="display-label">Message</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Message)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "List")
    </p>
}
