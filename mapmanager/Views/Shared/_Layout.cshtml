<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/mapmanager.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Prime Super - Map Manager</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
                @Html.Action("UserSelect", "Account")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "TripMarker")</li>
                    <li>@Html.ActionLink("New", "Create", "TripMarker")</li>
                    <li>@Html.ActionLink("List", "List", "TripMarker")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
